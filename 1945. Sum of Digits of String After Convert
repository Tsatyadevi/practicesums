//https://leetcode.com/problems/sum-of-digits-of-string-after-convert//
class Solution {
public:
    int getLucky(string s, int k) {
        int x;
        int c=0;
        for(auto i:s){
            x=i-96;
            if(x<10){
                c=c+x;
            }
            else{
                c=c+x%10;
                x/=10;
                c=c+x;
            }
        }
        if(k==1)
        return c;
        else{
            for(int i=0;i<k-1;i++){
                int y=0;
                while(c){
            y=y+c%10;
            c/=10;
                }
                c=y;
            }
                return c;
            }
            return -1;
    }
};
